{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/login.css') }}">
{% endblock stylesheets %}

{% block body_tag %}text-center{% endblock body_tag %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form-signin">
        {#<img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">#}
        <span class="mb-4"><i class="fas fa-user fa-5x"></i></span>

        <h1 class="h3 mb-3 font-weight-normal">Saioa hasi</h1>

        <label for="username" class="sr-only">Username:</label>
        <input type="text" id="username"  class="form-control" placeholder="Email-a" required autofocus name="_username" value="{{ last_username }}" />

        <label for="password" class="sr-only">Password:</label>
        <input type="password" id="password" name="_password" class="form-control" placeholder="Pasahitza" required>

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sartu</button>
    </form>
{% endblock %}

{% block title %}

{% endblock %}

